<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="@dimen/_260sdp"
    android:layout_height="@dimen/_128sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_20sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_clue"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_120sdp"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="0dp"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/card_image"
                android:contentDescription="@string/image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/lele" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/hiasan_kiri"
                        tools:ignore="ImageContrastCheck" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lele"
                        android:textSize="@dimen/_16ssp"
                        android:fontFamily="@font/abhaya_extra"
                        android:layout_marginTop="@dimen/_8sdp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:importantForAccessibility="no"
                        android:src="@drawable/hiasan_kanan"
                        tools:ignore="ImageContrastCheck" />


                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_155sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:backgroundTint="@color/dark_orange"
                    app:cardElevation="0dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/_10sdp" >

                    <ImageView
                        android:id="@+id/card_description"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/description"
                        android:src="@drawable/text_lele"
                        tools:ignore="ImageContrastCheck" />


                </androidx.cardview.widget.CardView>



            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>



</androidx.cardview.widget.CardView>
