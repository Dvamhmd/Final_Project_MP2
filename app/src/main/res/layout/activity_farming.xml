<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/farming">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_bg"
            android:layout_marginTop="@dimen/_45sdp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"/>

            <ImageView
                android:id="@+id/my_food"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_98sdp"
                android:contentDescription="@string/agriculture"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ternak_panganku"
                android:background="@drawable/rounded_corner_background"
                android:layout_marginBottom="@dimen/_20sdp"
                android:elevation="@dimen/_8sdp"/>

            <ImageView
                android:id="@+id/my_clue"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_98sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/rounded_corner_background"
                android:contentDescription="@string/agriculture"
                android:elevation="@dimen/_8sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/panduan_ternak" />

            <ImageView
                android:id="@+id/my_report"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_98sdp"
                android:contentDescription="@string/agriculture"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/laporan_mingguan"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/rounded_corner_background"
                android:elevation="@dimen/_8sdp"/>



        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar" />

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>